<Page x:Class="Vinesauce_ROM_Corrupter.EmulatorWindow"
      KeepAlive="True"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vinesauce_ROM_Corrupter"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EmulatorWindow">

    <Grid>
        <StackPanel>
            <Label Content="Emulator Executable" />
            <DockPanel LastChildFill="True">
                <Button x:Name="openEmulatorFileButton" 
                        DockPanel.Dock="Right"
                        Content="BROWSE" 
                        Click="openEmulatorFileButton_Click"
                        Width="100px"
                        Style="{StaticResource GreenButton}"
                        />
                <TextBox x:Name="emulatorLocationName" 
                         DockPanel.Dock="Left"
                          />
            </DockPanel>
            <CheckBox x:Name="runEmulatorCheck" Content="Run After Corruption" />
        </StackPanel>

    </Grid>
</Page>
